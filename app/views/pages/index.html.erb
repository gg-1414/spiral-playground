<div id="canvas-wrapper">
  <canvas id="canvas" width="500" height="50"></canvas>
</div>
<div class="settings">
  <div class="level-input">
    <label for="speed">Adjust speed 0.1 - 10</label>
    <input type="number" name="speed" id="speed-input" placeholder="Speed" step="0.1" min="0.1" max="10.0" value="0.1">
  </div>
  <div class="custom-sliders" style="display:none">
    <p>Starting point</p>
    <input type="range" min="0" max="360" value="0" class="slider" id="starting-slider">

    <p>Total number of lines</p>
    <input type="range" min="1" max="360" value="360" class="slider" id="total-slider">

    <p>Distance between each line</p>
    <input type="range" min="1" max="50" value="5" class="slider" id="distance-slider">

    <p>Line thickness</p>
    <input type="range" min="1" max="560" value="1" class="slider" id="thickness-slider">

    <p>Hue Complexity</p>
    <input type="range" min="1" max="100" value="2" class="slider" id="hue-complexity-slider">

    <p>Movement</p>
    <input type="range" min="1" max="180" value="45" class="slider" id="movement-slider">

    <p>Angle</p>
    <input type="range" min="0" max="90" value="0" class="slider" id="angle1-slider">
  </div>
</div>
<div id="spirals-list">
  <button data-id="1"></button>
  <button data-id="2"></button>
  <button data-id="3"></button>
  <button data-id="4"></button>
  <button data-id="5"></button>
</div>